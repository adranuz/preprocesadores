fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sans-serif
color-primario = #333
color-secundario = #8841DA
color-claro = #fff

contenedor()
	display: flex
	width: 90%
	margin: auto
	padding: 30px 0

caja-sombra()
	background: color-claro
	box-shadow: 0 20px 33px 0 rgba(0,0,0,0.2)

opacidad(color, cantidad)
	alpha(color, cantidad)

// itera en la lista y aplica estilos ahi
for header in 3 2 1
	h{header} // parecido a `h${header}`
		font-size: 35px - (5*header)
		margin: 0

// funcion para insertar estilos mediante condicional
titulos(fuente)
	if fuente == fuente1
		font-family: fuente1
	else
		font-family: fuente2
		font-weight: 600
		text-transform: uppercase

* 
	box-sizing: border-box

body
	margin: 0
	color: color-primario
	titulos(fuente1)
